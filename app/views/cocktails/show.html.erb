<div class="container">
  <h1> <%= @cocktail.name %> Recipe</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 200, crop: :fill %>
      </div>
    <div class="col-xs-12 col-sm-4">
      <h5>Ingredients:</h5>
      <% @cocktail.doses.each do |dose| %>
        <ul>
        <li>
        <%= dose.ingredient.name %> | <%= dose.description %>
        <%= link_to "ðŸ—‘", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
        </li>
        </ul>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>
